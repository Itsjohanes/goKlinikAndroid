<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goKlinik.Activity.BookingJadwalActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_namaDokter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            android:text="Nama"
            android:textColor="@color/black"
            />



        <TextView
            android:id="@+id/tv_jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            android:text="Hari"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_jam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:text="Jam"
            />

        <Button
            android:id="@+id/btn_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Booking"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:justificationMode="inter_word"
            android:text="Mohon periksa jadwal dengan benar. Kami akan konfirmasi langsung via WhatsApp setelah Anda melakukan booking"
            />


    </LinearLayout>
</ScrollView>